{
    "activationEvents": [
        "onFileSystem:file"
    ],
    "categories": [
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.revealFileInFolder",
                "icon": "$(sign-in)",
                "title": "Reveal in folder"
            },
            {
                "command": "revealFileInOS",
                "icon": "$(sign-in)",
                "title": "Reveal in OS"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.revealFileInFolder",
                    "group": "navigation",
                    "when": "canRevealFile"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.revealFileInFolder",
                    "group": "navigation",
                    "when": "canRevealFile"
                }
            ],
            "view/title": [
                {
                    "command": "revealFileInOS",
                    "group": "navigation",
                    "when": "view == workbench.explorer.fileView"
                }
            ]
        }
    },
    "description": "Quickly reveal file in folder/finder/explorer",
    "devDependencies": {
        "@types/node": "^24.3.1",
        "@types/vscode": "^1.90.0",
        "esbuild": "^0.25.9",
        "typescript": "^5.9.2"
    },
    "displayName": "Reveal File In Folder",
    "engines": {
        "vscode": "^1.90.0"
    },
    "main": "./out/main",
    "name": "revealfileinfolder",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/VSCode-RevealFileInFolder",
    "scripts": {
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "vscode:prepublish": "npm run esbuild-base -- --pure:console.log --minify",
        "watch": "npm run esbuild"
    },
    "version": "0.0.7"
}
