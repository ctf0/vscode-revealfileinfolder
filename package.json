{
    "name": "revealfileinfolder",
    "displayName": "Reveal File In Folder",
    "description": "Quickly reveal file in folder/finder/explorer",
    "version": "0.0.2",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/VSCode-RevealFileInFolder",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onFileSystem:file"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.revealFileInFolder",
                "title": "Reveal in folder",
                "icon": {
                    "dark": "./icons/reveal.svg",
                    "light": "./icons/reveal_light.svg"
                }
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.revealFileInFolder",
                    "when": "editorIsOpen && resourceScheme != 'untitled'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.revealFileInFolder",
                    "group": "navigation",
                    "when": "editorIsOpen && canRevealFile"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.23",
        "tslint": "^6.1.3",
        "typescript": "^4.6.3",
        "vscode": "^1.1.37",
        "tslint-config-standard": "^9.0.0"
    }
}
